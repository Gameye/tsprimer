{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch File",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}",
            "preLaunchTask": "watch",
            "outFiles": [
                "${workspaceFolder}/node/**/*.js"
            ]
        }
    ]
}